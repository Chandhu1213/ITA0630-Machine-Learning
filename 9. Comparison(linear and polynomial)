import numpy as np
import matplotlib.pyplot as plt
from sklearn.linear_model import LinearRegression
from sklearn.preprocessing import PolynomialFeatures
from sklearn.metrics import mean_squared_error

# Sample non-linear dataset
X = np.array([1, 2, 3, 4, 5]).reshape(-1,1)
y = np.array([1, 4, 9, 16, 25])   # y = x^2

# Linear Regression
lin_model = LinearRegression()
lin_model.fit(X, y)
y_lin_pred = lin_model.predict(X)

# Polynomial Regression (degree 2)
poly = PolynomialFeatures(degree=2)
X_poly = poly.fit_transform(X)

poly_model = LinearRegression()
poly_model.fit(X_poly, y)
y_poly_pred = poly_model.predict(X_poly)
# Compare Errors
print("Linear Regression MSE:",
      mean_squared_error(y, y_lin_pred))

print("Polynomial Regression MSE:",
      mean_squared_error(y, y_poly_pred))

# Plot
plt.scatter(X, y, color='black')
plt.plot(X, y_lin_pred, label='Linear', color='blue')
plt.plot(X, y_poly_pred, label='Polynomial', color='red')
plt.legend()
plt.show()
